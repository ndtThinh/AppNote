<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".note.DetailNoteFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/image_recipe"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Your New Note"
                android:textColor="@color/white"
                android:fontFamily="@font/nunito_bold"
                android:textSize="25dp"
                android:gravity="center"
                android:background="@color/purple_500"
                android:scaleType="fitXY"/>

            <ImageButton
                android:id="@+id/btn_back_detail_note"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/shape_custom_circle_trans"
                android:contentDescription=""
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/back" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/layout_time_save">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_access_time_24"
                android:background="@color/white"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/textView_time"
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:textSize="23dp"
                android:text="time"
                android:textColor="@color/black"
                android:background="@drawable/back_item_background"
                android:layout_margin="5dp"
                android:gravity="center"/>

            <ImageButton
                android:id="@+id/btn_save_edit"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_save_alt_24"
                android:background="@color/white"
                android:layout_margin="5dp"
                />
        </LinearLayout>

        <EditText
            android:id="@+id/edit_tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:hint="Tittle..."
            android:textSize="25dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/layout_edit_tittle"/>
        <EditText
            android:id="@+id/edit_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Type the content here"
            android:padding="5dp"
            android:gravity="left"
            android:textColor="@color/black"
            android:background="@drawable/layout_background_content"
            />

    </LinearLayout>


</ScrollView>